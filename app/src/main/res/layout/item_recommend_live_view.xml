<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="@dimen/size_200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_recommend_live"
    android:padding="@dimen/default_margin">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_live_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/size_5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorFFDB2F23"
            android:textSize="@dimen/size_10sp"
            tools:text="直播live" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_toLeftOf="@id/tv_live_status"
            android:layout_toStartOf="@id/tv_live_status"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_3"
            android:textSize="@dimen/size_10sp"
            tools:text="第三套全國廣播體操" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        app:layout_constraintTop_toBottomOf="@id/rl_top">

        <TextView
            android:id="@+id/tv_top_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_4"
            tools:text="1" />
        <ImageView
            android:id="@+id/iv_top_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            />

        <TextView
            android:id="@+id/tv_top_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_toLeftOf="@id/tv_top_score"
            android:layout_toStartOf="@id/tv_top_score"
            android:layout_toRightOf="@id/iv_top_icon"
            android:layout_toEndOf="@id/iv_top_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_4"
            tools:text="山寨誰在" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        app:layout_constraintTop_toBottomOf="@id/rl_center">

        <TextView
            android:id="@+id/tv_bottom_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_4"
            tools:text="1" />
        <ImageView
            android:id="@+id/iv_bottom_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            />


        <TextView
            android:id="@+id/tv_bottom_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_toLeftOf="@id/tv_bottom_score"
            android:layout_toStartOf="@id/tv_bottom_score"
            android:layout_toRightOf="@id/iv_bottom_icon"
            android:layout_toEndOf="@id/iv_bottom_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_4"
            tools:text="山寨誰在" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>