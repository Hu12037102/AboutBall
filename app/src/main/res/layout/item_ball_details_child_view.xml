<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_20dp"
    android:layout_marginRight="@dimen/size_20dp"
    app:cardCornerRadius="@dimen/size_6dp"
    app:cardElevation="@dimen/size_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SingLineTextView"
            android:layout_marginTop="@dimen/size_20dp"
            android:gravity="center"
            android:textColor="@color/colorFFA6A6A6"
            android:textSize="@dimen/size_12sp"
            tools:text="2018-12-22" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/size_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:src="@mipmap/icon_default_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="梅州客家" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/size_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_4"
                android:textSize="22sp"
                tools:text="1-0" />

            <LinearLayout
                android:layout_width="@dimen/size_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:src="@mipmap/icon_default_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="梅州客家" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/HorizontalLine"
            android:layout_marginTop="@dimen/size_20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp">

            <TextView
                android:id="@+id/tv_judge_referee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@drawable/shape_black_line_view"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingTop="@dimen/size_5dp"
                android:text="@string/give_referee_judge" />

            <TextView
                android:id="@+id/tv_judge_opponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_toLeftOf="@id/tv_judge_referee"
                android:background="@drawable/shape_black_line_view"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingTop="@dimen/size_5dp"
                android:text="@string/give_opponent_judge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_toLeftOf="@id/tv_judge_opponent"
                android:background="@drawable/shape_black_line_view"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingTop="@dimen/size_5dp"
                android:text="@string/give_ball_team_judge" />


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>