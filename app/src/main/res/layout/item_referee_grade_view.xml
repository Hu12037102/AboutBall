<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.item.weight.ItemView
        android:id="@+id/item_grade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        app:content_drawable_padding="@dimen/size_10dp"
        app:content_right_icon="@mipmap/icon_item_right"
        app:content_text_color="@color/color_4"
        app:content_text_size="@dimen/size_14sp"
        app:title_data="@string/referee_certificate_grade"
        app:title_text_color="@color/color_4"
        app:show_bottom_line="true"
        app:bottom_line_margin_left="@dimen/default_margin"
        app:bottom_line_margin_right="@dimen/default_margin"/>
    <LinearLayout
        android:id="@+id/ll_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/photo"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/size_5dp"
        android:text="@string/does_not_need_to_upload_id_photos"
        android:textColor="@color/colorFFA6A6A6"
        android:textSize="@dimen/size_12sp" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="187dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@drawable/shape_stroke_dash_view">
        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            />

        <TextView
            android:id="@+id/tv_update_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/size_10dp"
            android:drawableTop="@mipmap/icon_camera_referee"
            android:text="@string/click_update_referee_details_photo"
            android:textColor="@color/color_2"
            android:textSize="@dimen/size_12sp"

            />
        <TextView
            android:id="@+id/tv_certificate_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp"
            android:background="@color/color99000000"
            android:textColor="@color/colorWhite"
            android:text="@string/upload_again"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            />

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>