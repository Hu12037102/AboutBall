<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_65dp">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_3dp"
        android:layout_marginTop="@dimen/size_3dp"
        android:background="@color/colorFFA6A6A6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle_view"
        android:layout_width="7dp"
        android:layout_height="@dimen/size_7dp"
        android:background="@drawable/shape_game_result_check_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/SingLineTextView"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:textColor="@color/color_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="退款申请" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/SingLineTextView"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:textColor="@color/colorFFA6A6A6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        tools:text="2019-01-25" />
</androidx.constraintlayout.widget.ConstraintLayout>