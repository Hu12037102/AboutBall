<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_1"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_65dp"
        app:riv_oval="false"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/size_75dp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_2"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_65dp"
        app:riv_oval="false"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/riv_1"
        android:layout_marginLeft="@dimen/size_5dp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_3"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_65dp"
        app:riv_oval="false"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/riv_2"
        android:layout_marginLeft="@dimen/size_5dp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_4"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_65dp"
        app:riv_oval="false"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toBottomOf="@id/riv_1"
        android:layout_marginTop="@dimen/size_5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/size_75dp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_5"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_65dp"
        app:riv_oval="false"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toBottomOf="@id/riv_2"
        android:layout_marginTop="@dimen/size_5dp"
        app:layout_constraintLeft_toRightOf="@id/riv_4"
        android:layout_marginLeft="@dimen/size_5dp"
        />
</android.support.constraint.ConstraintLayout>