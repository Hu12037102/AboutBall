<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/default_margin">

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="@dimen/size_70dp"
        android:layout_height="@dimen/size_25dp"
        android:background="@drawable/shape_circle_blue_fill_view"
        android:gravity="center"
        android:text="@string/all_end"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_40dp"
        android:layout_marginTop="@dimen/default_margin"
        android:drawableLeft="@mipmap/icon_goals"
        android:drawablePadding="@dimen/size_5dp"
        android:text="@string/goal"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:drawableLeft="@mipmap/icon_penalties"
        android:drawablePadding="@dimen/size_5dp"
        android:text="@string/point_sphere"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_40dp"
        android:layout_marginTop="@dimen/default_margin"
        android:drawableLeft="@mipmap/icon_assist"
        android:drawablePadding="@dimen/size_5dp"
        android:text="@string/assist"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end" />
</android.support.constraint.ConstraintLayout>