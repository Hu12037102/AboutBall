<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item"
    android:layout_width="190dp"
    android:layout_height="135dp"
    app:cardElevation="@dimen/size_6dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="@dimen/size_6dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_15dp"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_include_head"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:background="@mipmap/icon_my_default_head"/>
            <TextView
                android:id="@+id/tv_include_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_5dp"
                android:textColor="@color/color_4"
                android:lineSpacingExtra="@dimen/size_5dp"
                tools:text="关键是了框架家里的事感觉脸\n上监督管理局是感觉深蹲路公交上考虑"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_include_time"
            style="@style/SingLineTextView"
            android:textColor="@color/colorFFA6A6A6"
            android:textSize="@dimen/size_12sp"
            android:drawableLeft="@mipmap/icon_about_ball_time"
            tools:text="2019.028"
            android:padding="@dimen/size_10dp"
            android:drawablePadding="@dimen/size_5dp"
            />
        <TextView
            android:id="@+id/tv_include_name"
            style="@style/SingLineTextView"
            android:textColor="@color/colorFFA6A6A6"
            android:textSize="@dimen/size_12sp"
            android:drawableLeft="@mipmap/icon_about_ball_people"
            tools:text="2019.028"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingRight="@dimen/size_10dp"
            android:drawablePadding="@dimen/size_5dp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>