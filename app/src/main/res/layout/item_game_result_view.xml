<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:paddingBottom="@dimen/size_30dp">

    <View
        style="@style/VerticalLine"
        android:layout_width="0.5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20dp"
        android:background="@color/colorFFF0F0F0"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/SingLineTextView"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="@dimen/default_margin"
        android:drawableLeft="@drawable/shape_game_result_check_view"
        android:drawablePadding="@dimen/size_20dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorFFA6A6A6"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="天青色等烟雨，而我在等你" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_42dp"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/size_10dp"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="天青色等烟雨，而我在等你" />


</android.support.constraint.ConstraintLayout>