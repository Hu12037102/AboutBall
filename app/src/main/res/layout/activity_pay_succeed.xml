<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.item.weight.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        app:back_left_drawable="@mipmap/icon_back"
        app:back_text_padding_left="@dimen/default_margin"
        app:back_text_padding_right="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:sure_data="@string/back_order"
        app:sure_text_color="@color/color_4"
        app:sure_text_padding_left="@dimen/default_margin"
        app:sure_text_padding_right="@dimen/default_margin"
        app:sure_text_size="@dimen/size_14sp"
        app:back_click_is_finish="false"/>

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_40dp"
        android:contentDescription="@null"
        android:src="@mipmap/icon_pay_succeed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_view" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/size_10dp"
        android:textColor="@color/colorFFA6A6A6"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_content"
        tools:text="@string/pay_succeed_transmit_friend" />

    <TextView
        android:id="@+id/tv_click"
        style="@style/ButtonCenterText"
        android:layout_width="160dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:text="@string/transmit_friend"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>