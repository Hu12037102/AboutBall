<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_hint_group"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/SingLineTextView"
        android:gravity="center_horizontal"
        android:padding="@dimen/default_margin"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_17sp"
        tools:text="修改手机号"

        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/acet_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/size_35dp"
        android:layout_marginRight="@dimen/size_35dp"
        android:background="@drawable/shape_message_commit_view"
        android:gravity="center"
        android:hint="@string/please_input_you_phone_number"
        android:minHeight="@dimen/size_30dp"
        android:textColorHint="@color/colorFFA6A6A6"
        android:textSize="@dimen/size_14sp" />

    <View style="@style/HorizontalLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_hint_dialog_cancel_view"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_3"
            android:textSize="@dimen/size_16sp"
            tools:text="取消" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/colorFFEFEFEF" />

        <TextView
            android:id="@+id/tv_sures"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_hint_dialog_sure_view"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/color_2"
            android:textSize="@dimen/size_16sp"
            tools:text="确定" />
    </LinearLayout>

</LinearLayout>