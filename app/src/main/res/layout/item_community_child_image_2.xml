<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/riv_child_1"
    style="@style/CommunityChildImage"
    android:layout_width="105dp"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:riv_border_width="@dimen/size_1dp"
    app:riv_border_color="@color/colorFFDCDCDC"
    app:riv_corner_radius="@dimen/size_6dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_child_2"
        style="@style/CommunityChildImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_border_width="@dimen/size_1dp"
        app:riv_border_color="@color/colorFFDCDCDC"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/riv_child_1"
        android:layout_marginLeft="@dimen/size_10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>