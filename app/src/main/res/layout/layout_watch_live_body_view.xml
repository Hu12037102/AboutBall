<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.work.guaishouxingqiu.aboutball.weight.FocusableTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@color/colorTheme"
        android:scrollHorizontally="true"
        tools:text="第十八届球王杯" />

    <TextView
        android:id="@+id/tv_grade"
        style="@style/SingLineTextView"
        android:layout_marginTop="@dimen/size_10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorTheme"
        android:textSize="22sp"
        tools:text="0 - 1" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="@dimen/size_105dp"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@drawable/shape_watch_live_tv"
        android:gravity="center"
        android:text="@string/watch_live"
        android:textColor="@color/colorTheme"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>