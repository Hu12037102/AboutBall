<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_15dp"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:paddingTop="@dimen/default_margin"
        android:textColor="@color/color_4"
        android:textSize="21sp"
        tools:text="天青色等烟雨" />

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_15dp"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:textColor="@color/colorFFA6A6A6"
        android:textSize="@dimen/size_14sp"
        tools:text="来源：五华印象" />

    <com.work.guaishouxingqiu.aboutball.weight.BaseWebView
        android:id="@+id/bw_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_input_name_edit"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_5dp"
        android:background="@color/colorFFFBFAFB" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_margin"
        android:text="@string/hot_message"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_17sp" />

    <View style="@style/HorizontalLine" />

</LinearLayout>