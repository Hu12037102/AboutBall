<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_six_white_view"
    android:paddingBottom="@dimen/size_30dp">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="@dimen/size_10dp"
        android:src="@mipmap/icon_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:gravity="center_horizontal"
        android:text="@string/you_have_unconfirmed_dates"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_former_ball"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="@dimen/size_30dp"
        android:drawableRight="@mipmap/icon_item_right"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:text="@string/selector_appointment_has_been_made"
        android:gravity="center_vertical"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_18sp"
        android:background="@drawable/shape_radius_six_color_6_view"

        />
    <TextView
        android:id="@+id/tv_new_ball"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/tv_former_ball"
        android:layout_marginTop="@dimen/size_15dp"
        android:drawableRight="@mipmap/icon_item_right"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin"
        android:text="@string/selector_appointment_new_made"
        android:gravity="center_vertical"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_18sp"
        android:background="@drawable/shape_radius_six_color_6_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>