<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultParentVerticalLinearLayout"
    android:background="@color/colorTheme">

    <TextView
        style="@style/DefaultTitleText"
        android:text="@string/input_message_code" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_40dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/size_40dp"
        android:textColor="@color/color_3"
        tools:text="我们向12306" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_input_1"
           style="@style/RegisterInputCode"
            android:background="@drawable/shape_register_input_check_edit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:text="5" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_input_2"
            style="@style/RegisterInputCode"
            tools:text="1" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_input_3"
            style="@style/RegisterInputCode"
            tools:text="5" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_input_4"
            style="@style/RegisterInputCode"
            tools:text="5" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_gain_message_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/default_margin"
        android:text="@string/gain_message_code"
        android:clickable="false"
        tools:ignore="RtlHardcoded" />

</LinearLayout>