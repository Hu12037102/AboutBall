<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_1"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_65dp"
        android:layout_marginLeft="@dimen/size_75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/size_6dp"
        app:riv_oval="false" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_2"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_65dp"
        android:layout_marginLeft="@dimen/size_5dp"
        app:layout_constraintLeft_toRightOf="@id/riv_1"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/size_6dp"
        app:riv_oval="false" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_3"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_65dp"
        android:layout_marginLeft="@dimen/size_75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/riv_1"
        app:riv_corner_radius="@dimen/size_6dp"
        android:layout_marginTop="@dimen/size_5dp"
        app:riv_oval="false" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_4"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_65dp"
        android:layout_marginLeft="@dimen/size_5dp"
        app:layout_constraintLeft_toRightOf="@id/riv_3"
        app:layout_constraintTop_toBottomOf="@id/riv_2"
        app:riv_corner_radius="@dimen/size_6dp"
        android:layout_marginTop="@dimen/size_5dp"
        app:riv_oval="false" />
</android.support.constraint.ConstraintLayout>