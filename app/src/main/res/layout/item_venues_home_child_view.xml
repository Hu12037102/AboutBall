<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item"
    android:layout_width="@dimen/size_120dp"
    android:layout_height="160dp"
    app:cardElevation="@dimen/size_5dp"
    app:cardMaxElevation="@dimen/size_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_venue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90dp"
            app:riv_corner_radius_top_left="@dimen/size_6dp"
            app:riv_corner_radius_top_right="@dimen/size_6dp"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/size_5dp"
            android:textColor="@color/colorFF261C1B"
            android:textSize="@dimen/size_14sp"
            tools:text="我在任命广场时间分开了家按时反馈
            反馈撒就发了辣椒粉哈三联发哈进水阀" />

        <TextView
            android:id="@+id/tv_long"
            style="@style/SingLineTextView"
            android:paddingLeft="@dimen/size_5dp"
            android:paddingRight="@dimen/size_5dp"
            android:textColor="@color/colorFFA6A6A6"
            android:textSize="@dimen/size_12sp"
            tools:text="距离：900m"

            />
    </LinearLayout>
</android.support.v7.widget.CardView>