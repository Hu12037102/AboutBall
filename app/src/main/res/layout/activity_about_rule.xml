<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.example.item.weight.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        app:back_left_drawable="@mipmap/icon_back"
        app:back_text_padding_left="@dimen/default_margin"
        app:back_text_padding_right="@dimen/default_margin"
        app:center_data="@string/about_rule_title"
        app:center_text_color="@color/color_4"
        app:center_text_size="@dimen/size_18sp"
        app:title_show_bottom_line="true" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_40dp"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:paddingTop="@dimen/size_40dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_venue_camera_rule"
                    app:layout_constraintBottom_toBottomOf="@id/tv_title_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_title_1" />

                <TextView
                    android:id="@+id/tv_title_1"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:lineSpacingExtra="@dimen/size_5dp"
                    android:text="@string/about_ball_rule_1"
                    android:textColor="@color/colorFFA6A6A6"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintLeft_toRightOf="@id/iv_title_1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_title_1"
                    android:layout_width="@dimen/size_1dp"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@color/color_2"
                    app:layout_constraintLeft_toLeftOf="@id/iv_title_1"
                    app:layout_constraintRight_toRightOf="@id/iv_title_1"
                    app:layout_constraintTop_toBottomOf="@id/iv_title_1" />

                <ImageView
                    android:id="@+id/iv_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_venue_ball_rule"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_title_1" />

                <TextView
                    android:id="@+id/tv_title_2"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:lineSpacingExtra="@dimen/size_5dp"
                    android:text="@string/about_ball_rule_2"
                    android:textColor="@color/colorFFA6A6A6"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_title_2"
                    app:layout_constraintLeft_toRightOf="@id/iv_title_1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_title_1" />

                <View
                    android:id="@+id/view_title_2"
                    android:layout_width="@dimen/size_1dp"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@color/color_2"
                    app:layout_constraintLeft_toLeftOf="@id/iv_title_2"
                    app:layout_constraintRight_toRightOf="@id/iv_title_2"
                    app:layout_constraintTop_toBottomOf="@id/iv_title_2" />

                <ImageView
                    android:id="@+id/iv_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_venue_check_rule"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_title_2" />

                <TextView
                    android:id="@+id/tv_title_3"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15dp"
                    android:lineSpacingExtra="@dimen/size_5dp"
                    android:text="@string/about_ball_rule_3"
                    android:textColor="@color/colorFFA6A6A6"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_title_3"
                    app:layout_constraintLeft_toRightOf="@id/iv_title_2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_title_2" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_1dp"
                    android:layout_weight="1"
                    android:background="#EBEBEBFF" />

                <TextView
                    android:layout_width="@dimen/size_90dp"
                    android:layout_height="@dimen/size_30dp"
                    android:background="@drawable/shape_color_7_view"
                    android:gravity="center"
                    android:text="@string/situation"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_1dp"
                    android:layout_weight="1"
                    android:background="#EBEBEBFF" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_30dp"
                android:drawableLeft="@drawable/shape_color_2_size_7_circle_view"
                android:drawablePadding="@dimen/size_10dp"
                android:text="@string/about_rule_title_2"
                android:textColor="@color/color_4"
                android:textSize="@dimen/size_17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_content_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:lineSpacingExtra="@dimen/size_5dp"
                android:text="@string/about_ball_rule_4"
                android:textColor="@color/colorFFA6A6A6" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20dp"
                android:drawableLeft="@drawable/shape_color_2_size_7_circle_view"
                android:drawablePadding="@dimen/size_10dp"
                android:text="@string/about_rule_title_5"
                android:textColor="@color/color_4"
                android:textSize="@dimen/size_17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_content_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:lineSpacingExtra="@dimen/size_5dp"
                android:text="@string/about_ball_rule_5"
                android:textColor="@color/colorFFA6A6A6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20dp"
                android:drawableLeft="@drawable/shape_color_2_size_7_circle_view"
                android:drawablePadding="@dimen/size_10dp"
                android:text="@string/cancel"
                android:textColor="@color/color_4"
                android:textSize="@dimen/size_17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_content_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:lineSpacingExtra="@dimen/size_5dp"
                android:text="@string/about_ball_rule_6"
                android:textColor="@color/colorFFA6A6A6" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>