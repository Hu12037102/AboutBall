<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.example.item.weight.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        app:back_left_drawable="@mipmap/icon_back"
        app:back_text_padding_left="@dimen/default_margin"
        app:back_text_padding_right="@dimen/default_margin"
        app:center_data="@string/about_rule_title"
        app:center_text_color="@color/color_4"
        app:center_text_size="@dimen/size_18sp" />

    <View style="@style/HorizontalLine" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_30dp">

            <TextView
                style="@style/AboutRuleTitle"
                android:layout_marginTop="@dimen/size_20dp"
                android:drawableLeft="@mipmap/icon_rule_1"
                android:text="@string/post_about_ball" />

            <TextView
                style="@style/AboutRuleContent"
                android:layout_marginTop="@dimen/size_15dp"
                android:text="@string/about_rule_content_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginTop="@dimen/size_10dp"
                android:lineSpacingExtra="@dimen/size_5dp"
                android:text="@string/about_rule_content_hint"
                android:textColor="@color/colorFFA6A6A6"
                android:textSize="@dimen/size_12sp" />

            <TextView
                style="@style/AboutRuleTitle"
                android:layout_marginTop="@dimen/size_30dp"
                android:drawableLeft="@mipmap/icon_rule_2"
                android:text="@string/about_rule_title_2" />

            <TextView
                style="@style/AboutRuleContent"
                android:layout_marginTop="@dimen/size_15dp"
                android:text="@string/about_rule_content_2" />

            <TextView
                style="@style/AboutRuleTitle"
                android:layout_marginTop="@dimen/size_30dp"
                android:drawableLeft="@mipmap/icon_rule_3"
                android:text="@string/about_rule_title_3" />

            <TextView
                style="@style/AboutRuleContent"
                android:layout_marginTop="@dimen/size_15dp"
                android:text="@string/about_rule_content_3" />

            <TextView
                style="@style/AboutRuleTitle"
                android:layout_marginTop="@dimen/size_30dp"
                android:drawableLeft="@mipmap/icon_rule_4"
                android:text="@string/about_rule_title_4" />

            <TextView
                style="@style/AboutRuleContent"
                android:layout_marginTop="@dimen/size_15dp"
                android:text="@string/about_rule_content_4" />

            <TextView
                style="@style/AboutRuleTitle"
                android:layout_marginTop="@dimen/size_30dp"
                android:drawableLeft="@mipmap/icon_rule_5"
                android:text="@string/about_rule_title_5" />

            <TextView
                style="@style/AboutRuleContent"
                android:layout_marginTop="@dimen/size_15dp"
                android:text="@string/about_rule_content_5" />

            <TextView
                style="@style/AboutRuleTitle"
                android:layout_marginTop="@dimen/size_30dp"
                android:drawableLeft="@mipmap/icon_rule_6"
                android:text="@string/about_rule_title_6" />

            <TextView
                style="@style/AboutRuleContent"
                android:layout_marginTop="@dimen/size_15dp"
                android:text="@string/about_rule_content_6" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>