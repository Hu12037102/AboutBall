<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">
<com.example.item.weight.ItemView
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50dp"
    app:title_data="@string/standards"
    app:title_text_color="@color/colorFFA6A6A6"
    app:content_right_icon="@mipmap/icon_item_right"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_5dp"
        android:background="@color/colorDefaultLayout"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        />
    <com.example.item.weight.ItemView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        app:title_data="@string/graphic_introduction"
        app:title_text_size="@dimen/size_17sp"
        app:show_bottom_line="true"
        />
    <com.work.guaishouxingqiu.aboutball.weight.BaseWebView
        android:id="@+id/bwv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>