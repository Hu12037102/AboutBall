<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.example.item.weight.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        app:back_left_drawable="@mipmap/icon_back"
        app:back_text_padding_left="@dimen/default_margin"
        app:back_text_padding_right="@dimen/default_margin"
        app:center_data="@string/my_prize"
        app:center_text_color="@color/color_4"
        app:center_text_size="@dimen/size_19sp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/color_2"
        app:tabIndicatorHeight="@dimen/size_2dp"
        app:tabSelectedTextColor="@color/color_4"
        app:tabTextColor="@color/colorFF777777" />
    <ViewStub
        android:id="@+id/vs_rule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35dp"
        android:layout="@layout/layout_hint_rule_view" />
    <View
        style="@style/HorizontalLine"
      />
    <com.work.guaishouxingqiu.aboutball.weight.BaseViewPager
        android:id="@+id/bvp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>