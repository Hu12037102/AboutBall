<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/size_10dp"
    android:layout_marginBottom="@dimen/size_10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_data"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="match_parent"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:riv_oval="false"
        app:riv_border_color="@color/colorFFDCDCDC"
        app:riv_border_width="@dimen/size_1dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_5dp"
        android:src="@mipmap/icon_delete_red"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@id/riv_data" />

</android.support.constraint.ConstraintLayout>