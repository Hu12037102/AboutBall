<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_80dp"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        tools:text="02:26"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_host"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@mipmap/icon_default_logo"
            android:layout_marginTop="@dimen/size_10dp"
            />
        <TextView
            android:id="@+id/tv_host"
            style="@style/SingLineTextView"
            android:layout_width="@dimen/size_0dp"
            android:gravity="center_vertical"
            tools:text="塔寨村什么时候"
            android:textColor="@color/color_4"
            app:layout_constraintLeft_toRightOf="@id/civ_host"
            app:layout_constraintTop_toTopOf="@id/civ_host"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_guest"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@mipmap/icon_default_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/size_10dp"
            />
        <TextView
            android:id="@+id/tv_guest"
            style="@style/SingLineTextView"
            android:layout_width="@dimen/size_0dp"
            android:gravity="center_vertical"
            tools:text="塔寨村什么时候"
            android:textColor="@color/color_4"
            app:layout_constraintLeft_toRightOf="@id/civ_guest"
            app:layout_constraintTop_toTopOf="@id/civ_guest"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            />

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_host_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2(5)"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/size_10dp"
            android:textColor="@color/color_4"
            android:textSize="@dimen/size_17sp"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_host_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/color_4"
            android:textSize="@dimen/size_17sp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        style="@style/SingLineTextView"
        tools:text="图文直播系列"
        android:gravity="center"
        android:textSize="@dimen/size_12sp"
        android:drawablePadding="@dimen/size_8dp"
        />

</LinearLayout>