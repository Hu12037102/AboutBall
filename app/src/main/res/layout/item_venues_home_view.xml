<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root_venue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginBottom="@dimen/size_5dp"
    >

    <RelativeLayout
        android:id="@+id/rl_venue_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/icon_home_venues"
            android:drawablePadding="@dimen/size_10dp"
            android:text="@string/recently_the_venue"
            android:textColor="@color/colorFF1D1D1D"
            android:textSize="@dimen/size_17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/size_10dp"
            android:drawableRight="@mipmap/icon_item_right"
            android:text="@string/read_more_venue" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_venue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200dp"
        android:background="@color/colorWhite"
      />
</LinearLayout>