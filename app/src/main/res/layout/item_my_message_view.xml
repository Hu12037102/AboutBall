<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_60dp"
    android:background="@drawable/selector_item">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_my_message_1"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_message_badge_view"
        app:layout_constraintRight_toRightOf="@id/iv_head"
        android:gravity="center"
        tools:text="1"
        android:minWidth="@dimen/size_12dp"
        android:minHeight="@dimen/size_12dp"
        app:layout_constraintTop_toTopOf="@id/iv_head"
        android:textSize="9sp"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/tv_time"
        style="@style/SingLineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_margin"
        android:textColor="@color/colorFFA6A6A6"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        tools:text="2019-12-08" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/SingLineTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        app:layout_constraintRight_toLeftOf="@id/tv_time"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/size_12sp"
        tools:text="六年级一班李智明" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/SingLineTextView"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/size_12sp"
        android:textColor="@color/colorFFA6A6A6"
        tools:text="天在下雨人要嫁人"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginBottom="@dimen/size_12sp"/>
    <View
        style="@style/HorizontalLine"
        android:layout_width="@dimen/size_0dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>