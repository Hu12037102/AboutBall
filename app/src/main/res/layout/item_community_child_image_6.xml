<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_child_1"
        style="@style/CommunityChildImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_border_width="@dimen/size_1dp"
        app:riv_border_color="@color/colorFFDCDCDC"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_child_2"
        style="@style/CommunityChildImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_border_width="@dimen/size_1dp"
        app:riv_border_color="@color/colorFFDCDCDC"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/riv_child_1"
        android:layout_marginLeft="@dimen/size_10dp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_child_3"
        style="@style/CommunityChildImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_border_width="@dimen/size_1dp"
        app:riv_border_color="@color/colorFFDCDCDC"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/riv_child_2"
        android:layout_marginLeft="@dimen/size_10dp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_child_4"
        style="@style/CommunityChildImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_border_width="@dimen/size_1dp"
        app:riv_border_color="@color/colorFFDCDCDC"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toBottomOf="@id/riv_child_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/size_10dp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_child_5"
        style="@style/CommunityChildImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_border_width="@dimen/size_1dp"
        app:riv_border_color="@color/colorFFDCDCDC"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toBottomOf="@id/riv_child_2"
        app:layout_constraintLeft_toRightOf="@id/riv_child_4"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_10dp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_child_6"
        style="@style/CommunityChildImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_border_width="@dimen/size_1dp"
        app:riv_border_color="@color/colorFFDCDCDC"
        app:riv_corner_radius="@dimen/size_6dp"
        app:layout_constraintTop_toBottomOf="@id/riv_child_3"
        app:layout_constraintLeft_toRightOf="@id/riv_child_5"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_10dp"
        />
</android.support.constraint.ConstraintLayout>