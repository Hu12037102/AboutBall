<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_six_white_view"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_30dp"
    android:paddingTop="@dimen/size_30dp"
    android:id="@+id/ll_root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weichat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableTop="@mipmap/icon_share_weichat"
            android:gravity="center_horizontal"
            android:text="@string/weichat_friend"
            android:textColor="@color/color_4" />

        <TextView
            android:id="@+id/tv_weichat_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableTop="@mipmap/icon_share_circle_of_friends"
            android:gravity="center_horizontal"
            android:text="@string/weichat_circle_of_friends"
            android:textColor="@color/color_4" />

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableTop="@mipmap/icon_share_qq"
            android:gravity="center_horizontal"
            android:text="@string/qq_friend"
            android:textColor="@color/color_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableTop="@mipmap/icon_share_sin"
            android:gravity="center_horizontal"
            android:text="@string/sin_weibo"
            android:textColor="@color/color_4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal" />


    </LinearLayout>

</LinearLayout>