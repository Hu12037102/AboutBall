<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_110dp"
    android:layout_height="@dimen/size_40dp"
    android:background="@drawable/shape_radius_six_white_view"
    app:cardCornerRadius="@dimen/size_6dp"
    app:cardElevation="@dimen/size_5dp"
    android:layout_marginRight="@dimen/default_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/icon_exit"
        android:drawablePadding="@dimen/size_10dp"
        android:text="@string/exit_ball_team"
        android:textColor="@color/color_4"
        android:textSize="@dimen/size_14sp" />
</android.support.v7.widget.CardView>