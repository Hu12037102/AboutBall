<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_60dp"
    android:background="@drawable/selector_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/default_margin">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_head"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:src="@mipmap/icon_my_default_head" />

            <TextView
                android:id="@+id/tv_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:background="@drawable/shape_orange_view"
                android:paddingBottom="@dimen/size_2dp"
                android:paddingLeft="@dimen/size_5dp"
                android:paddingRight="@dimen/size_5dp"
                android:paddingTop="@dimen/size_2dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_12sp"
                tools:text="队长" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/SingLineTextView"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textColor="@color/color_4"
                android:textSize="@dimen/size_14sp"
                tools:text="古月哥欠" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingLeft="@dimen/size_20dp"
            android:textColor="@color/color_4"
            android:textSize="@dimen/size_14sp"
            tools:text="古月哥欠" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/size_20dp"
            android:text="@string/location"
            android:textColor="@color/color_4"
            android:textSize="@dimen/size_14sp"/>


    </LinearLayout>

    <View
        style="@style/HorizontalLine"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin" />
</RelativeLayout>