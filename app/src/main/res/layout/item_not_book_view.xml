<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin">

        <TextView
            android:id="@+id/tv_time"
            style="@style/SingLineTextView"
            android:layout_marginTop="@dimen/size_15dp"
            android:textColor="@color/color_4"
            android:textSize="@dimen/size_17sp"
            android:textStyle="bold"
            tools:text="2019-09-09"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
          />

        <TextView
            android:id="@+id/tv_name"
            style="@style/SingLineTextView"
            android:layout_marginTop="@dimen/size_15dp"
            android:drawableLeft="@mipmap/icon_about_ball_people"
            android:drawablePadding="@dimen/size_10dp"
            android:textColor="@color/colorFFA6A6A6"
            android:textSize="@dimen/size_12sp"
            tools:text="梅州足球队"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <CheckBox
            android:id="@+id/cb_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/selector_circle_check_box_view"
            android:button="@null"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:enabled="false"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        style="@style/HorizontalLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_top" />


</androidx.constraintlayout.widget.ConstraintLayout>