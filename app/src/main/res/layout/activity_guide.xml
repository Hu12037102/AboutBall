<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.work.guaishouxingqiu.aboutball.weight.BaseViewPager
        android:id="@+id/bvp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_experience"
        android:layout_width="160dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginBottom="@dimen/size_55dp"
        android:background="@drawable/shape_guide_experience_view"
        android:gravity="center"
        android:text="@string/experience_immediately"
        android:textColor="@color/colorTheme"
        android:textSize="@dimen/size_16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>