<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="true">
    <shape>
        <gradient android:startColor="@color/color_2" android:endColor="@color/colorFF71A9FD"/>
        <corners android:radius="@dimen/size_100dp" />
    </shape>
</item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/colorFFFBFAFA" />
            <corners android:radius="@dimen/size_100dp" />
        </shape>
    </item>
</selector>