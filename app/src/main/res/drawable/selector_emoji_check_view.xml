<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape >
            <size android:width="@dimen/size_7dp" android:height="@dimen/size_7dp" />
            <solid android:color="@color/colorFF3586FF" />
            <corners android:radius="@dimen/size_7dp" />
